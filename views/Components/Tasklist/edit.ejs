<div class="taskbuttonsdiv">
    <form
      class="task-btn"
      action="/createtasklist/<%=taskList._id%>?_method=DELETE"
      method="POST"
    >
      <button class="delete-btn">Delete Task List</button>
    </form>
  </div>
  <div class="edit-task-list">
    <div>
    <h3>Edit Task List</h3>
    <form
      action="/createtasklist/<%=taskList._id%>?_method=PUT"
      method="POST"
      class="inputform"
    >
      <input
        type="text"
        name="taskListName"
        placeholder="Task name"
        autocomplete="off"
        value="<%= taskList.taskListName %>"
      />
      <textarea
        name="description"
        placeholder="Description"
        autocomplete="off"
      ><%= taskList.description%></textarea
      >
      <br />
      <button class="submit" >Update</button>
    </form></div>
  </div>
  <br />
  <br />