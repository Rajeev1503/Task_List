<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="css/style.css" />
    <title>Document</title>
  </head>
  <body>
    <div class="container">
      <div class="create-task-container">
        <h1>Create New Task List</h1>
        <form method="post" action="/createtasklist" class="inputform">
          <input
            type="text"
            name="taskListName"
            placeholder="Task name"
            autocomplete="off"
          />
          <textarea
            name="description"
            placeholder="Description"
            autocomplete="off"
          ></textarea>
          <br />
          
          <br />
          <button class="submit">Submit</button>
        </form>
      </div>

      <div class="tasklist">
        <ul>
          <% for(let taskList of allTaskList) { %>
          <div class="tasksview">
            <li>
              <ul>
                <li><%= taskList.taskListName %></li>
                <li><%= taskList.description %></li>
                <% if (taskList.isActive) { %>
                  <h2 style="color:green">Active</h2>
                  <%} else { %>
                  <h2 style="color:red">Active</h2>
                  <% } %>
                  
              </ul>
            </li>
            <br>
            <div class="taskbuttonsdiv">
              <button class="task-btn">
                <a href="todo/<%= taskList._id %>/edit">Edit</a>
              </button>

              <form class="task-btn"
                action="/todo/<%=taskList._id%>?_method=DELETE"
                method="POST"
              >
                <button class="delete-btn">Delete</button>
              </form>
            </div>
          </div>
          <% }%>
        </ul>
      </div>
    </div>
  </body>
</html>
